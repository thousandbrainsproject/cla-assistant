{
    "compilerOptions": {
        "allowJs": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "incremental": true,
        "lib": ["ESNext"],
        "module": "ESNext",
        "moduleResolution": "node",
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "dist",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "target": "ES2020"
    },
    "include": [
        "**/*.mts",
        "**/*.ts"
    ],
    "exclude": [
        "dist",
        "node_modules"
    ]
}